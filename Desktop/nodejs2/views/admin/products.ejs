<%- include('../layout/header.ejs') %>
    <h1><%= title%></h1>
    <table class="table table-products">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% products.forEach((item) => { %>
            <tr>
                <td><%= item.name %></td>
                <td><img src="<%= item.image %>"></td>
                <td>
                    <a href="/admin/products/<%= item.id%>">Edit</a>
                    <a href="/admin/products/<%= item.id%>" data-productId="<%= item.id%>" class="delete-button">Delete</a>
                </td>
            </tr>
        <%}) %>
        </tbody>
        </table>

        <form id="deleteForm" method="DELETE" action="">
        </form>
<%- include('../layout/footer.ejs') %>